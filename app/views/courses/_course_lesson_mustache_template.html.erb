<div class="row">
   <div class="media">
    <div class="media-left media-middle">
      <% if lesson %>
        <a href="<%= url_for(lesson) %>" style="color:<%= lesson.color %>"><i class="fa fa-play-circle" style="font-size: 60pt;"></i></a>
      <% else %>
        <a href='/lessons/{{id}}' style='color:{{color}}'><i class="fa fa-play-circle" style="font-size: 60pt;"></i></a>
      <% end %>
    </div>
    <div class="media-body">
      <% if lesson %>
        <h3 class="title"><%= lesson.name %> </h3>
  	    <p class="desc"><%= lesson.description %></p>
      <% else %>
        <h3 class='title'>{{name}}</h3>
        <p class='desc'>{{description}}</p>
      <% end %>
    </div>
    <% if !lesson %>
    {{{input}}}
    <% end %>
  </div>
</div>
