<% if @page.errors.blank? %>
$("#<%= @form_id %>").remove();
$("#pages tbody").append("<%= escape_javascript(render 'pages/page_row', { page: @page }) %>");
<% else %>
$("#<%= @form_id %>").replaceWith("<%= escape_javascript(render 'page/page_form', { page: @page, action_url: create_page_url, method_type: :post }) %>");
<% end %>
