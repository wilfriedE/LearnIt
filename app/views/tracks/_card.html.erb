<div class="row">
  <div class="panel panel-defaultpanel-sm " >
    <div class="media" >

    <div class="media-left media-middle">
      <a  href="<%= url_for track_path(track) %>" ><i class="fa fa-list" style="font-size: 60pt;"></i></a>
    </div>
    <div class="media-body" >
      <h3 class="title"><%= track.name %></h3>
      <p class="desc"><ul class="list-inline">
        <li><strong>Topics:</strong></li>
        <% track.topics.each do |topic| %>
          <li style=""><%= link_to topic.name, topic_path(topic) %></li>
        <% end %>
      </ul></p>
      <a class="btn btn-info " href="<%= url_for viewing_track_path(track, 0) %>" ><i class="fa fa-play"></i> Start Track</a>
      <button class="btn btn-primary "  data-toggle="collapse" data-target="#collapseCourses-<%= track.id %>" aria-expanded="false" aria-controls="collapseCourses-<%= track.id %>"><i class="fa fa-list" ></i> View Courses</button>
    </div>

    <div  class="collapse" id="collapseCourses-<%= track.id %>">
      <% track.track_courses.each do |track_course| %>
      <% course = track_course.course %>
      <div class="media" style="border-left: 0.25em solid {{course.color}}">
        <div class="media-left media-middle">
          <a href="<%= url_for viewing_course_path(course, 0) %>">
           <i class="fa fa-play-circle" style="font-size: 50pt;"></i>
          </a>
        </div>
        <div class="media-body">
          <h5 class="media-heading"><b><%= course.name %></b></h5>
          <p class="desc"><%= course.description %><</p>
        </div>
      </div>
      <%  end %>
    </div>

  </div>
  </div>
</div>
