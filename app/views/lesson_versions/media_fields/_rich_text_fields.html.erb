<ul class="nav nav-pills mb-3" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="pill" href="#markdown-editor" role="tab" aria-controls="markdown-editor" aria-expanded="true">Editor</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="pill" href="#markdown-preview" role="tab" aria-controls="markdown-preview" aria-expanded="true">Preview</a>
  </li>
