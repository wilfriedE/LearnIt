<div class='nested-fields' <%= if f.object.attributes['lesson_id']; "data-id=#{f.object.attributes['lesson_id']}"; end %> >
    <%= f.input :position, :as => :hidden %>
    <%= f.input :lesson_id, :as => :hidden%>
    <% if f.object.attributes['lesson_id'] %>
      <%= load_course_lesson_form_view(Lesson.find(f.object.attributes['lesson_id'])) %>
    <% end %>
    <%= link_to_remove_association "Remove lesson from course", f, :class => "btn btn-danger btn-raised btn-xs"%>
</div>
