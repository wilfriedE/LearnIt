<% form_id = "new_platform_preference_#{(Time.now.to_f * 1000).to_i}" %>
<%= simple_form_for page, remote: true, url: action_url, method: method_type,
                                html: { class: "w-100 justify-content-between", id:  form_id }  do |f| %>
  <%= hidden_field_tag :form_id, form_id %>
  <%= f.input :name %>
  <%= f.input :title %>
  <%= f.input :body %>
  <%= f.submit "Save", class: "btn btn-outline-success" %>
<% end %>
